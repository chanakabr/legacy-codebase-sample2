<?xml version="1.0"?>


<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" requirePermission="false" />
  </configSections>

  <log4net debug="false">
    <appender name="LocalDebugging" type="log4net.Appender.RollingFileAppender,log4net">
      <file type="log4net.Util.PatternString" value="%property{DebuggingLogFilePath}"/>
      <param name="AppendToFile" value="false"/>
      <param name="RollingStyle" value="Date"/>
      <param name="DatePattern" value="yyyy.MM.dd"/>
      <param name="StaticLogFileName" value="true"/>
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d %-5p %c - %property{MSISDN} - %m%n"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="DEBUG" />
      </filter>
    </appender>

    <appender name="LocalInformation" type="log4net.Appender.RollingFileAppender,log4net">
      <!--<param name="File" value="log\Information.log"/>-->
      <file type="log4net.Util.PatternString" value="%property{InformationLogFilePath}"/>
      <param name="AppendToFile" value="false"/>
      <param name="RollingStyle" value="Date"/>
      <param name="DatePattern" value="yyyy.MM.dd"/>
      <param name="StaticLogFileName" value="true"/>
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d %-5p %c - %property{MSISDN} - %m%n"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="INFO" />
        <levelMax value="FATAL" />
      </filter>
    </appender>

    <appender name="LocalExceptions" type="log4net.Appender.RollingFileAppender,log4net">
      <!--<param name="File" value="log\exceptions.log"/>-->
      <file type="log4net.Util.PatternString" value="%property{ExceptionsLogFilePath}"/>
      <param name="AppendToFile" value="false"/>
      <param name="RollingStyle" value="Date"/>
      <param name="DatePattern" value="yyyy.MM.dd"/>
      <param name="StaticLogFileName" value="true"/>
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d %-5p %c - %property{Msisdn} (%property{RequesterIP}) - %property{RequestURL} - %m%n%exception"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter>
    </appender>

    <appender name="LocalPerformance" type="log4net.Appender.RollingFileAppender,log4net">
      <!--<param name="File" value="log\performances.log"/>-->
      <file type="log4net.Util.PatternString" value="%property{PerformancesLogFilePath}"/>
      <param name="AppendToFile" value="true"/>
      <param name="RollingStyle" value="Date"/>
      <param name="DatePattern" value="yyyy.MM.dd"/>
      <param name="StaticLogFileName" value="true"/>
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d %-5p %c - %property{Msisdn} (%property{RequesterIP}) - %property{RequestURL} - %m%n"/>
      </layout>
    </appender>

    <root>
      <level value="DEBUG"/>
      <appender-ref ref="LocalInformation"/>
      <appender-ref ref="LocalExceptions"/>
      <appender-ref ref="LocalDebugging"/>
    </root>

    <logger name="TVPPro.SiteManager.Services" additivity="false">
      <level value="WARN"/>
      <appender-ref ref="LocalExceptions"/>
    </logger>

    <!--<logger name="Tvinci.Data.TVMDataLoader.TVMProvider" additivity="false">
      <level value="ALL"/>
      <appender-ref ref="LocalDebugging"/>
    </logger>-->

    <!--<logger name="Site.Performances" additivity="false">
      <level value="DEBUG"/>
      <appender-ref ref="LocalPerformance"/>
    </logger>-->

  </log4net>
</configuration>


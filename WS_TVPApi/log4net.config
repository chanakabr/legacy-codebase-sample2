        </appender>-->

        <appender name="monitorAppender" type="log4net.Appender.RollingFileAppender">
            <file value="C:\\log\\tvp_api\\tvp-api-old-monitor.log" />
            <appendToFile value="true" />
            <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
            <rollingStyle value="Size" />
            <maxSizeRollBackups value="10" />
            <maximumFileSize value="10MB" />
            <filter type="log4net.Filter.LevelRangeFilter">
                <acceptOnMatch value="true" />
                <levelMin value="Trace" />
                <levelMax value="Trace" />
            </filter>
            <staticLogFileName value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%message%newline" />
            </layout>
        </appender>
        <appender name="DebugRollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
            <file value="C:\\log\\tvp_api\\tvp-api-old-debug.log" />
            <appendToFile value="true" />
            <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
            <rollingStyle value="Size" />
            <maxSizeRollBackups value="10" />
            <maximumFileSize value="10MB" />
            <filter type="log4net.Filter.LevelRangeFilter">
                <acceptOnMatch value="true" />
                <levelMin value="debug" />
                <levelMax value="debug" />
            </filter>
            <staticLogFileName value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%-5p %d %5rms %-22.22c{1} %-18.18M - %m%n" />
            </layout>
        </appender>
        <root>
            <level value="ALL" />
            <appender-ref ref="RollingLogFileAppender" />
            <appender-ref ref="DebugRollingLogFileAppender" />
            <appender-ref ref="UdpAppender" />
            <appender-ref ref="monitorAppender" />
        </root>

        <logger name="GlobalASCX" additivity="false">
            <level value="DEBUG"/>
            <appender-ref ref="LocalPerformance"/>
        </logger>
        
    </log4net>

</configuration>




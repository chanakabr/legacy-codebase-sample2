<?xml version="1.0"?>
<configuration>
    <system.web>
        <compilation debug="true" targetFramework="4.5" />
        <httpRuntime targetFramework="4.5" />
    </system.web>

    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    </configSections>

    <log4net debug="true">
        <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
            <file value="C:\\log\\tvp_api\\tvp-api-old.log" />
            <appendToFile value="true" />
            <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
            <rollingStyle value="Size" />
            <maxSizeRollBackups value="10" />
            <maximumFileSize value="10MB" />
            <filter type="log4net.Filter.LevelRangeFilter">
                <acceptOnMatch value="true" />
                <levelMin value="info" />
                <levelMax value="fatal" />
            </filter>
            <staticLogFileName value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%-5p %d %5rms %-22.22c{1} %-18.18M - %m%n" />
            </layout>
        </appender>
        <appender name="UdpAppender" type="log4net.Appender.UdpAppender">
            <localPort value="8080" />
            <remoteAddress value="10.0.80.25" />
            <remotePort value="6005" />
            <layout type="log4net.Layout.PatternLayout, log4net">
                <conversionPattern value="%message%newline" />
            </layout>
            <filter type="log4net.Filter.LevelRangeFilter">
                <acceptOnMatch value="true" />
                <levelMin value="Trace" />
                <levelMax value="Trace" />
            </filter>
        </appender>

        <appender name="LocalPerformance" type="log4net.Appender.RollingFileAppender">
            <file value="C:\\log\\tvp_api\\tvp-performance-old.log" />
            <appendToFile value="true" />
            <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
            <rollingStyle value="Date" />
            <DatePattern value="yyyy.MM.dd" />
            <filter type="log4net.Filter.LevelRangeFilter">
                <acceptOnMatch value="true" />
                <levelMin value="debug" />
                <levelMax value="debug" />
            </filter>
            <staticLogFileName value="true" />
            <layout type="log4net.Layout.PatternLayout,log4net">
                <conversionPattern value="%d %-5p %c - %property{Msisdn} (%property{RequesterIP}) - %property{RequestURL} - %m%n" />
            </layout>
        </appender>



<?xml version="1.0"?>
<configuration>
    <system.web>
        <compilation debug="true" targetFramework="4.5" />
        <httpRuntime targetFramework="4.5" />
    </system.web>

    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    </configSections>

    <log4net debug="true">
        <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
            <file type="log4net.Util.PatternString" value="C:\\log\\%property{log4net:HostName}\\tvp_api\\tvp-api-old.log" />
            <appendToFile value="true" />
            <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
            <rollingStyle value="Size" />
            <maxSizeRollBackups value="500" />
            <maximumFileSize value="10MB" />
            <filter type="log4net.Filter.LevelRangeFilter">
                <acceptOnMatch value="true" />
                <levelMin value="info" />
                <levelMax value="fatal" />
            </filter>
            <staticLogFileName value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%p %d %m%n" />
            </layout>
        </appender>
     
        <appender name="monitorAppender" type="log4net.Appender.RollingFileAppender">
            <file type="log4net.Util.PatternString" value="C:\\log\\%property{log4net:HostName}\\tvp_api\\tvp-api-old-monitor.log" />
            <appendToFile value="true" />
            <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
            <rollingStyle value="Size" />
            <maxSizeRollBackups value="500" />
            <maximumFileSize value="10MB" />
            <filter type="log4net.Filter.LevelRangeFilter">
                <acceptOnMatch value="true" />
                <levelMin value="Trace" />
                <levelMax value="Trace" />
            </filter>
            <staticLogFileName value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%p %d %m%n" />
            </layout>
        </appender>
        <appender name="DebugRollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
            <file type="log4net.Util.PatternString" value="C:\\log\\%property{log4net:HostName}\\tvp_api\\tvp-api-old-debug.log" />
            <appendToFile value="true" />
            <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
            <rollingStyle value="Size" />
            <maxSizeRollBackups value="500" />
            <maximumFileSize value="10MB" />
            <filter type="log4net.Filter.LevelRangeFilter">
                <acceptOnMatch value="true" />
                <levelMin value="debug" />
                <levelMax value="debug" />
            </filter>
            <staticLogFileName value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%p %d %m%n" />
            </layout>
        </appender>
        
        
        
        
        
        <appender name="LocalPerformance" type="log4net.Appender.RollingFileAppender">
            <file type="log4net.Util.PatternString" value="C:\\log\\%property{log4net:HostName}\\tvp_api\\tvp-performance-old.log" />
            <appendToFile value="true" />
            <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
            <rollingStyle value="Date" />
            <DatePattern value="yyyy.MM.dd" />
            


            <filter type="log4net.Filter.StringMatchFilter">
                <!--<stringToMatch value="SSOSignIn" />-->
                <stringToMatch value="SSOSignIn" />
                <acceptOnMatch value="true" />
            </filter>


            
            
            
            <staticLogFileName value="true" />
            <layout type="log4net.Layout.PatternLayout,log4net">
                <conversionPattern value="%d %-5p %c - %property{Msisdn} (%property{RequesterIP}) - %property{RequestURL} - %m%n" />
            </layout>


            <!-- need this here! -->
            <filter type="log4net.Filter.DenyAllFilter" />
            
        </appender>














        <root>
            <level value="ALL" />
            <appender-ref ref="RollingLogFileAppender" />
            <appender-ref ref="DebugRollingLogFileAppender" />
            <appender-ref ref="UdpAppender" />
            <appender-ref ref="monitorAppender" />
        </root>

        <logger name="GlobalASCX" additivity="false">
            <level value="DEBUG"/>
            <appender-ref ref="LocalPerformance"/>
        </logger>

    </log4net>

</configuration>




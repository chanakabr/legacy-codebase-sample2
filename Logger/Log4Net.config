<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>
      <!--Log levels:Highest :  ALL  DEBUG  INFO  WARN  ERROR  FATAL  OFF  : Lowest--> 

     <!--=== Appender for Debug messages file ===--> 
    <appender name="DEBUG_APPENDER" type="log4net.Appender.RollingFileAppender,log4net">
      <file type="log4net.Util.PatternString" value="%property{DebugLogFilePath}"/>
    
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="DEBUG" />
      </filter>
      <additivity value="true" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="1" />
      <maximumFileSize value="300KB" />
      <rollingStyle value="Size" />
      <staticLogFileName value="true" />
  
      <layout type ="log4net.Layout.XmlLayoutSchemaLog4j"></layout> 
      

    </appender>

     <!--=== Appender for Info messages file ===--> 
    <appender name="INFO_APPENDER" type="log4net.Appender.RollingFileAppender,log4net">
      <file type="log4net.Util.PatternString" value="%property{InfoLogFilePath}"/>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="INFO" />
        <levelMax value="INFO" />
      </filter>
      <additivity value="true" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="1" />
      <maximumFileSize value="300KB" />
      <rollingStyle value="Size" />
      <staticLogFileName value="true" />
      <layout type ="log4net.Layout.XmlLayoutSchemaLog4j"></layout>
    </appender>

     <!--=== Appender for WARN messages file ===--> 
    <appender name="WARN_APPENDER" type="log4net.Appender.RollingFileAppender,log4net">
      <file type="log4net.Util.PatternString" value="%property{WarnLogFilePath}"/>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="WARN" />
        <levelMax value="WARN" />
      </filter>
      <additivity value="true" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="1" />
      <maximumFileSize value="300KB" />
      <rollingStyle value="Size" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline%date{MMMM dd, yyyy HH:mm:ss} ,%level, [%thread],%method, %logger - %message%newline , %exception" />
      </layout>
    </appender>

     <!--=== Appender for ERROR messages file ===--> 
    <appender name="ERROR_APPENDER" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="%property{ErrorLogFilePath}"/>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="ERROR" />
      </filter>
      <additivity value="true" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="100KB" />
      <rollingStyle value="Size" />
      <staticLogFileName value="true" />
      <layout type ="log4net.Layout.XmlLayoutSchemaLog4j"></layout>
    </appender>

     <!--=== Appender for FATAL messages file ===--> 
    <appender name="FATAL_APPENDER" type="log4net.Appender.RollingFileAppender,log4net">
      <file type="log4net.Util.PatternString" value="%property{FatalLogFilePath}"/>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="FATAL" />
        <levelMax value="FATAL" />
      </filter>
      <additivity value="true" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="1" />
      <maximumFileSize value="300KB" />
      <rollingStyle value="Size" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline%date{MMMM dd, yyyy HH:mm:ss} ,%level, [%thread],%method, %logger - %message%newline , %exception" />
      </layout>
    </appender>

    <!--=== Appender for FATAL messages file ===-->
    <appender name="GENERAL_APPENDER" type="log4net.Appender.RollingFileAppender,log4net">
      <file type="log4net.Util.PatternString" value="%property{GeneralLogFilePath}"/>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="FATAL" />
      </filter>
      <additivity value="true" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="1" />
      <maximumFileSize value="300KB" />
      <rollingStyle value="Size" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value=" %exception" />
      </layout>
    </appender>

    <appender name="AMQPAppender" type="Logger.AMQPAppender">
      <hostName value="192.168.16.178"/>
      <!-- Default to localhost -->
      <virtualHost value="/"/>
      <!-- Default to / -->
      <userName value="guest"/>
      <!-- Default to guest -->
      <password value="guest"/>
      <!-- Default to guest -->
      <requestedHeartbeat value="0"/>
      <!-- Value in seconds, default to 0 that mean no heartbeat -->
      <port value="15672"/>
      <!-- Default to 5672 -->
      <exchange value="logs_exchange"/>
      <!-- Default to logs -->
      <queue value="My2Queue"/>
      <!-- Default to logs -->
      <routingKey value="Views"/>
      <exchangeType value="topic"/>
      <!-- Default to empty -->
      <flushInterval value="5"/>
      <!-- Seconds to wait between message send. Default to 5 seconds -->
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d{ABSOLUTE} %-5p %c{1}:%L - %m%n" />
      </layout>
    </appender>
    
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="DEBUG_APPENDER"/>
      <appender-ref ref="INFO_APPENDER"/>     
      <appender-ref ref="ERROR_APPENDER"/>
      <appender-ref ref="AMQPAppender" />
    </root>

    <logger name="Logger" additivity="false">
      <level value="ALL" />
      <appender-ref ref="AMQPAppender" />
    </logger>  
    
  </log4net>


</configuration>
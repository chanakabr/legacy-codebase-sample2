  <TCMConfig URL="http://192.168.16.139:8080" Application="elasticsearch" Host="local_avig" Environment="main" AppID="5bf8cf60" AppSecret="5aaa99331c18f6bad4adeef93ab770c2" />
  
  <appSettings>
    <add key="ImageResizer.UseFileSystem" value="true"/>
    <add key="ImageResizer.ImagesBasePath" value="c:\pics\"/>
    <add key="tasks.resize_image" value="ImageResizeHandler" />
